{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmit": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "skipDefaultLibCheck": true,
    "useDefineForClassFields": true,
    "rootDirs": ["src"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
