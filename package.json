  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/node": "^7.22.19",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.23.0",
    "@types/express": "^4.17.18",
    "@types/jest": "^28.1.0",
    "@types/module-alias": "^2.0.2",
    "@types/morgan": "^1.9.6",
    "@types/pg": "^8.10.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^28.1.0",
    "prettier": "^3.0.3",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tscpaths": "^0.0.9",
    "typescript": "^5.2.2"
  },
  "engines": {
    "npm": "please-use-yarn",
    "node": ">= 16.15.0",
    "yarn": ">= 1.22"
  },
  "dependencies": {
    "axios": "^1.5.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "knex": "^2.5.1",
    "knex-paginate": "^3.1.1",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "pg": "^8.11.3"
  },
  "scripts": {
    "restart": "docker-compose down && docker-compose up",
    "start": "npx ts-node-dev --respawn --transpile-only -r tsconfig-paths/register -- src/main/server.ts",
    "build": "rm -rf dist && npx tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist/src",
    "test": "npx jest",
    "test:coverage": "npx jest --coverage ",
    "test:unit": "npm test -- --silent=false --watch -c jest-unit-config.js",
    "migrate": "npx knex --env bigdataConnection migrate:latest",
    "seed": "npx knex --env bigdataConnection seed:run",
    "docker:seed": "docker exec -it bigdata npx knex --env bigdataConnection seed:run",
    "docker:migrate": "docker exec -it bigdata npx knex --env bigdataConnection migrate:latest",
    "docker:rollback": "docker exec -it bigdata npx knex --env bigdataConnection migrate:rollback",
    "reset:microservice": "docker-compose down -v && sudo rm -rf data/ && docker-compose build && docker-compose up -d && yarn docker:migrate && yarn docker:seed",
    "reset:db": "yarn docker:rollback && yarn docker:migrate && yarn docker:seed",
    "db-conn:local": "docker exec -it bigdata-postgres psql 'port=5432 dbname=bigdata user=postgres password=postgres'",
    "lint": "eslint . --ext .ts"
  }
}
